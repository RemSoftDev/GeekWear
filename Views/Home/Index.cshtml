@{
    ViewBag.Title = "";
}
<div id="divContainer">
    <loading-indicator></loading-indicator>
    <div ng-controller="HomeController">
        @{
            if (ViewBag.CurrentUser != null)
            {
                <div ng-init="project.userId = '@ViewBag.CurrentUser.Id'"> </div>
            }
        }
        <div class="jumbotron">
            <img src="~/img/geek-logo.png" alt="logo" class="img-responsive" />
        </div>
        <div class="row configurator-container">
            <div class="col-md-6">
                <div class="form-group row">

                    <label class="col-sm-4 control-label">Shirt Color</label>
                    <div class="col-sm-8">
                        <div class="btn-group">
                            <label class="btn btn-primary" ng-model="project.shirtColor" uib-btn-radio="'white'">White</label>
                            <label class="btn btn-primary" ng-model="project.shirtColor" uib-btn-radio="'black'">Black</label>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 control-label">
                        Shirt Size
                    </label>
                    <div class="col-sm-8 btn-group" uib-dropdown keyboard-nav>
                        <button id="simple-btn-keyboard-nav" type="button" class="btn btn-primary" uib-dropdown-toggle>
                            {{selectedSize.label}} <span class="caret"></span>
                        </button>
                        <ul uib-dropdown-menu role="menu">
                            <li role="menuitem" ng-repeat="size in sizes">
                                <a ng-click="setSize(size)" href="#">{{size.label}}</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 control-label">
                        Text Transform
                    </label>
                    <div class="col-sm-8 btn-group" uib-dropdown keyboard-nav>
                        <button id="simple-btn-keyboard-nav" type="button" class="btn btn-primary" uib-dropdown-toggle>
                            {{selectedTransform.label}} <span class="caret"></span>
                        </button>
                        <ul uib-dropdown-menu role="menu">
                            <li role="menuitem" ng-repeat="transform in transforms">
                                <a ng-click="setTransform(transform.type)" href="#">
                                    {{transform.label}}
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 control-label">
                        Input Text
                    </label>
                    <div class="col-sm-8">
                        <textarea ng-change="transformText()" ng-model="project.textInput" class="form-control"></textarea>
                    </div>
                </div>
                <div class="form-group row" ng-show="project.userId">
                    <div class="col-lg-8 col-lg-offset-4">
                        <button class="btn btn-primary" ng-click="save()">Buy Now</button>
                        <button class="btn" ng-click="new()" style="margin-left:5px;">Add to Cart &amp; Create New</button>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div id="divResult" ng-class="project.shirtColor">
                    <div id="divResultDisplay">
                        <div ng-bind-html="outputText" id="divResulText"></div>
                        <qr class="qr-code" ng-if="qrLink" text="qrLink" image="true" size="200" title="Zoom on hover just for testing, in the future will be a modal window."></qr>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @*@Scripts.Render("~/bundles/textEncoders")
        @Scripts.Render("~/bundles/app")*@
}
